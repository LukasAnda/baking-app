<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:elevation="@dimen/rv_card_elevation"
        android:layout_margin="@dimen/rv_card_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp">

    <TextView
            android:id="@+id/description_tv"
            android:padding="@dimen/rv_card_padding"
            tools:text="Recipe step short description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/rv_card_text_size"
            android:gravity="center" />

</LinearLayout>